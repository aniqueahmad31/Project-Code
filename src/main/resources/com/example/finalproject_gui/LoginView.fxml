<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane
        xmlns="http://javafx.com/javafx/25"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.example.finalproject_gui.controller.LoginController"
        prefHeight="600.0"
        prefWidth="1000.0"
        stylesheets="@styles/login-styles.css"
        styleClass="root-pane">

    <!-- LEFT MENU -->
    <left>
        <VBox fx:id="leftMenuVBox"
              alignment="CENTER"
              spacing="25.0"
              prefWidth="260.0">
            <children>
                <Button fx:id="customerBtn"
                        text="Customer Login"
                        onAction="#handleCustomerLogin"/>
                <Button fx:id="managerSwitchBtn"
                        text="Manager Login"
                        onAction="#handleManagerLogin"/>
                <Button fx:id="exitBtn"
                        text="Exit"
                        onAction="#handleExit"/>
            </children>
            <padding>
                <Insets top="40.0"/>
            </padding>
        </VBox>
    </left>

    <!-- CENTER TITLE + LOGIN CARD -->
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <children>

                <!-- Main Titles -->
                <Label text="INVENTORY"
                       styleClass="main-title-line1"/>
                <Label text="MANAGEMENT SYSTEM"
                       styleClass="main-title-line2"/>

                <!-- Manager Login Card -->
                <VBox fx:id="centerManagerVBox"
                      alignment="CENTER"
                      spacing="18.0"
                      visible="false"
                      styleClass="login-card">
                    <children>

                        <!-- Manager ID -->
                        <HBox alignment="CENTER">
                            <children>
                                <Label text="Manager ID:" styleClass="label-login"/>
                                <TextField fx:id="managerIdField"
                                           promptText="Enter Manager ID"
                                           styleClass="text-field">
                                    <HBox.margin>
                                        <Insets left="12.0"/>
                                    </HBox.margin>
                                </TextField>
                            </children>
                        </HBox>

                        <!-- Password -->
                        <HBox alignment="CENTER">
                            <children>
                                <Label text="Password:" styleClass="label-login"/>
                                <PasswordField fx:id="passwordField"
                                               promptText="Enter Password"
                                               styleClass="password-field">
                                    <HBox.margin>
                                        <Insets left="18.0"/>
                                    </HBox.margin>
                                </PasswordField>
                            </children>
                        </HBox>

                        <!-- Error Label -->
                        <Label fx:id="errorLabel"
                               textFill="red"/>

                        <!-- Buttons -->
                        <HBox alignment="CENTER" spacing="25.0">
                            <children>
                                <Button fx:id="backButton"
                                        text="Cancel"
                                        onAction="#handleBackToMenu"/>
                                <Button fx:id="managerBtn"
                                        text="Login"
                                        onAction="#handleManagerLogin"/>
                            </children>
                        </HBox>

                    </children>
                    <padding>
                        <Insets top="30.0" bottom="30.0"/>
                    </padding>
                </VBox>

            </children>
        </VBox>
    </center>

</BorderPane>
